{
	"name": "queer-flags",
	"version": "0.1.0",
	"private": true,
	"engines": {
		"node": "8.9.1",
		"npm": "5.5.1"
	},
	"dependencies": {
		"autoprefixer": "7.1.6",
		"babel-cli": "^6.26.0",
		"babel-core": "6.26.0",
		"babel-eslint": "7.2.3",
		"babel-jest": "20.0.3",
		"babel-loader": "7.1.2",
		"babel-preset-es2015": "^6.24.1",
		"babel-preset-react-app": "^3.1.0",
		"babel-preset-stage-2": "^6.24.1",
		"babel-runtime": "6.26.0",
		"case-sensitive-paths-webpack-plugin": "2.1.1",
		"chalk": "1.1.3",
		"classnames": "^2.2.5",
		"css-loader": "0.28.7",
		"dotenv": "4.0.0",
		"eslint": "4.10.0",
		"eslint-config-react-app": "^2.0.1",
		"eslint-loader": "1.9.0",
		"eslint-plugin-flowtype": "2.39.1",
		"eslint-plugin-import": "2.8.0",
		"eslint-plugin-jsx-a11y": "5.1.1",
		"eslint-plugin-react": "7.4.0",
		"express": "^4.16.2",
		"extract-text-webpack-plugin": "3.0.2",
		"file-loader": "1.1.5",
		"fs-extra": "3.0.1",
		"get-contrast": "^2.0.0",
		"gridicons": "^2.1.0",
		"html-webpack-plugin": "2.29.0",
		"jest": "20.0.4",
		"node-sass-chokidar": "^0.0.3",
		"npm-run-all": "^4.1.2",
		"object-assign": "4.1.1",
		"postcss-flexbugs-fixes": "3.2.0",
		"postcss-loader": "2.0.8",
		"promise": "8.0.1",
		"pug": "^2.0.0-rc.4",
		"raf": "3.4.0",
		"react": "^16.1.0",
		"react-color": "^2.13.8",
		"react-dev-utils": "^4.2.1",
		"react-dom": "^16.1.0",
		"style-loader": "0.19.0",
		"url-loader": "0.6.2",
		"webpack": "3.8.1",
		"webpack-dev-server": "2.9.4",
		"webpack-manifest-plugin": "1.3.2",
		"whatwg-fetch": "2.0.3"
	},
	"scripts": {
		"build": "npm-run-all build:css build:js",
		"build:js": "node scripts/build.js",
		"build:css": "node-sass-chokidar src/scss/index.scss src/style.css",
		"prestart": "npm run build",
		"server": "NODE_ENV=production babel-node server/index.js",
		"start": "npm run server",
		"test": "node scripts/test.js --env=jsdom",
		"watch": "npm-run-all -p watch:css watch:js",
		"watch:css": "npm run build:css && node-sass-chokidar src/scss/index.scss src/style.css --watch",
		"watch:js": "node scripts/start.js"
	},
	"jest": {
		"collectCoverageFrom": [
			"src/**/*.{js,jsx,mjs}"
		],
		"setupFiles": [
			"<rootDir>/config/polyfills.js"
		],
		"testMatch": [
			"<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
			"<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
		],
		"testEnvironment": "node",
		"testURL": "http://localhost",
		"transform": {
			"^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
			"^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
			"^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
		},
		"transformIgnorePatterns": [
			"[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
		],
		"moduleNameMapper": {
			"components\\/(.*)": "<rootDir>/src/components/$1",
			"utils\\/(.*)": "<rootDir>/src/utils/$1",
			"^react-native$": "react-native-web"
		},
		"moduleFileExtensions": [
			"web.js",
			"mjs",
			"js",
			"json",
			"web.jsx",
			"jsx",
			"node"
		]
	},
	"babel": {
		"presets": [
			"es2015",
			"react-app"
		]
	},
	"eslintConfig": {
		"extends": "react-app"
	}
}
